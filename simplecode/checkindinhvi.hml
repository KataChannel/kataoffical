<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ứng dụng Quản lý Nhân viên Thị trường</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold text-center mb-4">Quản lý Nhân viên Thị trường</h1>
        
        <!-- Form thông tin nhân viên -->
        <div class="bg-white p-4 rounded shadow mb-4">
            <h2 class="text-xl font-semibold mb-2">Thông tin Check-in/Check-out</h2>
            <div class="mb-4">
                <label class="block text-sm font-medium">Tên nhân viên</label>
                <input id="employeeName" type="text" class="w-full p-2 border rounded" placeholder="Nhập tên nhân viên">
            </div>
            <div class="flex space-x-4">
                <button id="checkInBtn" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Check-in</button>
                <button id="checkOutBtn" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">Check-out</button>
            </div>
            <div id="locationStatus" class="mt-2 text-sm"></div>
        </div>

        <!-- Chụp ảnh nghiệm thu -->
        <div class="bg-white p-4 rounded shadow mb-4">
            <h2 class="text-xl font-semibold mb-2">Chụp ảnh nghiệm thu</h2>
            <video id="video" class="w-full max-w-md mx-auto" autoplay></video>
            <button id="captureBtn" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 mt-2">Chụp ảnh</button>
            <canvas id="canvas" class="hidden"></canvas>
            <img id="photo" class="w-full max-w-md mx-auto mt-2 hidden" alt="Ảnh nghiệm thu">
        </div>

        <!-- Lịch sử check-in/check-out -->
        <div class="bg-white p-4 rounded shadow">
            <h2 class="text-xl font-semibold mb-2">Lịch sử</h2>
            <ul id="historyList" class="list-disc pl-5"></ul>
        </div>
    </div>

    <script>
        // Lấy các phần tử DOM
        const employeeName = document.getElementById('employeeName');
        const checkInBtn = document.getElementById('checkInBtn');
        const checkOutBtn = document.getElementById('checkOutBtn');
        const locationStatus = document.getElementById('locationStatus');
        const video = document.getElementById('video');
        const captureBtn = document.getElementById('captureBtn');
        const canvas = document.getElementById('canvas');
        const photo = document.getElementById('photo');
        const historyList = document.getElementById('historyList');

        // Lưu trữ lịch sử
        let history = JSON.parse(localStorage.getItem('history')) || [];

        // Hàm hiển thị lịch sử
        function updateHistory() {
            historyList.innerHTML = '';
            history.forEach(item => {
                const li = document.createElement('li');
                li.textContent = `${item.type} - ${item.name} tại (${item.lat}, ${item.lon}) vào ${item.time}`;
                if (item.image) {
                    const img = document.createElement('img');
                    img.src = item.image;
                    img.className = 'w-24 h-24 object-cover mt-2';
                    li.appendChild(img);
                }
                historyList.appendChild(li);
            });
            localStorage.setItem('history', JSON.stringify(history)); // Lưu lịch sử vào localStorage
        }

        // Lấy vị trí GPS
        function getLocation(callback) {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    position => {
                        const { latitude, longitude } = position.coords;
                        locationStatus.textContent = `Vị trí: (${latitude.toFixed(4)}, ${longitude.toFixed(4)})`;
                        callback({ lat: latitude, lon: longitude });
                    },
                    error => {
                        locationStatus.textContent = 'Không thể lấy vị trí: ' + error.message;
                        callback(null);
                    }
                );
            } else {
                locationStatus.textContent = 'Trình duyệt không hỗ trợ định vị GPS';
                callback(null);
            }
        }

        // Xử lý check-in
        checkInBtn.addEventListener('click', () => {
            if (!employeeName.value) {
                alert('Vui lòng nhập tên nhân viên');
                return;
            }
            getLocation(location => {
                if (location) {
                    const time = new Date().toLocaleString('vi-VN');
                    history.push({
                        type: 'Check-in',
                        name: employeeName.value,
                        lat: location.lat,
                        lon: location.lon,
                        time
                    });
                    updateHistory();
                }
            });
        });

        // Xử lý check-out
        checkOutBtn.addEventListener('click', () => {
            if (!employeeName.value) {
                alert('Vui lòng nhập tên nhân viên');
                return;
            }
            getLocation(location => {
                if (location) {
                    const time = new Date().toLocaleString('vi-VN');
                    history.push({
                        type: 'Check-out',
                        name: employeeName.value,
                        lat: location.lat,
                        lon: location.lon,
                        time
                    });
                    updateHistory();
                }
            });
        });

        // Thiết lập camera
        async function setupCamera() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ video: true });
                video.srcObject = stream;
            } catch (err) {
                alert('Không thể truy cập camera: ' + err.message);
            }
        }

        // Thêm watermark vào ảnh
        function addWatermark(imageData, name, time) {
            const ctx = canvas.getContext('2d');
            canvas.width = imageData.width;
            canvas.height = imageData.height;
            ctx.drawImage(imageData, 0, 0);
            ctx.font = '20px Arial';
            ctx.fillStyle = 'rgba(255, 255, 255, 0.7)';
            ctx.fillRect(10, canvas.height - 40, 300, 30);
            ctx.fillStyle = 'red';
            ctx.fillText(`${name} - ${time}`, 15, canvas.height - 20);
            return canvas.toDataURL('image/jpeg');
        }

        // Chụp ảnh
        captureBtn.addEventListener('click', () => {
            if (!employeeName.value) {
                alert('Vui lòng nhập tên nhân viên');
                return;
            }
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            canvas.getContext('2d').drawImage(video, 0, 0);
            const time = new Date().toLocaleString('vi-VN');
            const imageData = new Image();
            imageData.src = canvas.toDataURL('image/jpeg');
            imageData.onload = () => {
                const watermarkedImage = addWatermark(imageData, employeeName.value, time);
                photo.src = watermarkedImage;
                photo.classList.remove('hidden');
                getLocation(location => {
                    if (location) {
                        history.push({
                            type: 'Ảnh nghiệm thu',
                            name: employeeName.value,
                            lat: location.lat,
                            lon: location.lon,
                            time,
                            image: watermarkedImage
                        });
                        updateHistory();
                    }
                });
            };
        });

        // Khởi động camera và hiển thị lịch sử
        setupCamera();
        updateHistory();
    </script>
</body>
</html>