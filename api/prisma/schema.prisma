generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource postgres {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String?   @unique
  password  String
  provider  String?  // "google", "facebook", "zalo"
  providerId String? @unique
  profile   Profile?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Menu {
  id        String   @id @default(uuid())
  title     String
  icon      String?  // Optional icon for menu
  slug      String?  // URL of the menu item
  parentId  String?  // Reference to parent menu (null if root)
  parent    Menu?    @relation("MenuChildren", fields: [parentId], references: [id])
  children  Menu[]   @relation("MenuChildren")
  order     Int      // For sorting menus
  isActive  Boolean  @default(true) // Enable/Disable menu
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Profile {
  id     String  @id @default(uuid())
  userId String  @unique
  user   User    @relation(fields: [userId], references: [id])
  name   String
  avatar String?
  bio    String?
}


model Sanpham {
  id        String   @id @default(uuid())
  title     String
  slug      String?   @unique
  masp      String   @unique
  giagoc    Float @default(0)
  dvt       String?
  hinhanh   String?
  soluong   Int @default(0)
  soluongkho Int @default(0)
  ghichu    String?
  order     Int? @default(1)
  // Quan hệ N-N với GioHang
  giohang   Giohangsanpham[]
  
  // Quan hệ N-N với BangGia
  banggia   Banggiasanpham[]
}

model Donhang {
  id          String  @id @default(uuid())
  title       String
  type        String
  madonhang   String  @unique
  ngaygiao    DateTime
  ghichu      String?
  khachhang   String
  order     Int 
  // Mối quan hệ 1-1 với Giỏ Hàng
  giohang     Giohang?
}

model Giohang {
  id        String   @id @default(uuid())
  title     String
  donhang   Donhang  @relation(fields: [donhangId], references: [id])
  donhangId String   @unique
  order     Int 
  // Quan hệ N-N với SanPham
  sanpham   Giohangsanpham[]
}

model Giohangsanpham {
  id        String   @id @default(uuid())
  idSP      String
  title     String
  sldat     Int
  slgiao    Int
  slnhan    Int
  ttdat     Float
  ttgiao    Float
  ttnhan    Float

  sanpham   Sanpham  @relation(fields: [idSP], references: [id])
  giohang   Giohang  @relation(fields: [giohangId], references: [id])
  giohangId String
}

model Banggia {
  id       String   @id @default(uuid())
  title    String
  type     String
  batdau   DateTime
  ketthuc  DateTime
  order     Int 
  // Quan hệ N-N với SanPham
  sanpham  Banggiasanpham[]
}

model Banggiasanpham {
  id        String   @id @default(uuid())
  sanphamId String
  banggiaId String
  sanpham   Sanpham  @relation(fields: [sanphamId], references: [id])
  banggia   Banggia  @relation(fields: [banggiaId], references: [id])
}
